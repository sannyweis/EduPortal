@model Domain.Entities.UserProfile

<h1>Delete User Profile</h1>

<div>
    <h3>Are you sure you want to delete this profile?</h3>
    <p>Phone Number: @Model.PhoneNumber</p>
    <p>Bio: @Model.Bio</p>
    <p>Date of Birth: @Model.DateOfBirth.ToString("d")</p>

    <!-- Указываем явное имя действия и контроллера -->
    <form asp-controller="UserProfile" asp-action="DeleteConfirmed" method="post">
        <!-- Скрытое поле для передачи ID -->
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "UserProfile")" class="btn btn-secondary">Cancel</a>
    </form>
</div>