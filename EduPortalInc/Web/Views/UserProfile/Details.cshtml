@model Domain.Entities.UserProfile

<h1>User Profile Details</h1>

<div>
    <h3>Phone Number:</h3>
    <p>@Model.PhoneNumber</p>

    <h3>Bio:</h3>
    <p>@Model.Bio</p>

    <h3>Date of Birth:</h3>
    <p>@Model.DateOfBirth.ToString("d")</p>

    <p>
        <a href="@Url.Action("Edit", "UserProfile", new { id = Model.Id })">Edit</a> |
        <a href="@Url.Action("Delete", "UserProfile", new { id = Model.Id })">Delete</a> |
        <a href="@Url.Action("Index", "UserProfile")">Back to List</a>
    </p>
</div>
